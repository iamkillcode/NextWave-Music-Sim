{
  "name": "nextwave-cloud-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for NextWave Music Sim",
  "main": "index.js",
  "scripts": {
    "lint": "echo 'No linting configured'",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --runInBand",
    "migrate-player": "node scripts/migrate_player.js"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.6",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0"
  },
  "devDependencies": {
    "jest": "^29.6.1"
  },
  "private": true
}
