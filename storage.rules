rules_version = '2';

// Firebase Storage Security Rules for NextWave
service firebase.storage {
  match /b/{bucket}/o {
    
    // Cover art uploads - users can only write to their own folder
    // Public read access for displaying images in charts and profiles
    match /cover-art/{userId}/{allPaths=**} {
      // Anyone can read (images need to be publicly accessible)
      allow read: if true;
      
      // Only authenticated users can write to their own folder
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
      
      // Only the owner can delete their own files
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
    
    // Crew symbols/logos - authenticated users can upload for their crew
    // Public read access for displaying crew logos
    match /crew-symbols/{allPaths=**} {
      // Anyone can read (crew logos need to be publicly accessible)
      allow read: if true;
      
      // Only authenticated users can upload crew symbols
      // Verification of crew leadership is done in the app logic
      allow write: if request.auth != null
                   && request.resource.size < 2 * 1024 * 1024  // Max 2MB
                   && request.resource.contentType.matches('image/.*');  // Only images
      
      // Authenticated users can delete (app logic checks crew leadership)
      allow delete: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
